        <%= form.label :nome_pai, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :filhos, class: "form-control" %>
        <%= form.label :filhos, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :estado_civil, class: "form-control" %>
        <%= form.label :estado_civil, class: "form-label" %>

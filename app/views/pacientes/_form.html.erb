<%= form_with(model: paciente) do |form| %>
  <% if paciente.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(paciente.errors.count, "error") %> prohibited this paciente from being saved:</h2>

      <ul>
        <% paciente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row g-2">
    <div class="col-md-5">
      <div class="form-floating">
        <%= form.text_field :nome , class: "form-control" %>
        <%= form.label :nome %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-floating">
        <%= form.text_field :cpf , class: "form-control" %>
        <%= form.label :cpf, 'CPF' %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-floating">
        <%= form.date_field :data_nascimento, class: "form-control" %>
        <%= form.label :data_nascimento, class: "form-label" %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-floating">
        <%= form.select :sexo, [ 'Masculino', 'Feminino'],{}, { class: "form-select" } %>
        <%= form.label :sexo, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-floating">
        <%= form.text_field :fones, class: "form-control" %>
        <%= form.label :fones, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-floating">
        <%= form.text_field :grau_instrucao, class: "form-control" %>
        <%= form.label :grau_instrucao, class: "form-label" %>
      </div>
    </div>
 
    <div class="col-md-2">
      <div class="form-floating">
        <%= form.select :convenio_id, Convenio.all.collect {|c| [ c.nome, c.id ] }, {prompt: 'Selecione um convÃªnio'} , { class: "form-select"} %>

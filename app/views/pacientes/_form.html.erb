      </div>
    </div>
 
    <div class="col-md-2">
      <div class="form-floating">
        <%= form.number_field :valor_atendimento, class: "form-control" %>
        <%= form.label :valor_atendimento, "Valor", class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :endereco, class: "form-control"%>
        <%= form.label :endereco, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :bairro, class: "form-control" %>
        <%= form.label :bairro, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :cidade, class: "form-control" %>
        <%= form.label :cidade, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :nome_mae, class: "form-control" %>
        <%= form.label :nome_mae, class: "form-label" %>

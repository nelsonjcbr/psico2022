    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :local_trabalho, class: "form-control" %>
        <%= form.label :local_trabalho, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :religiao, class: "form-control" %>
        <%= form.label :religiao, class: "form-label" %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="form-floating">
        <%= form.text_field :profissao, class: "form-control" %>
        <%= form.label :profissao, class: "form-label" %>

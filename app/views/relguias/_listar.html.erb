<turbo-frame id="search_results">

<div class="card mb-1 shadow">
  <div class="card-body">
    <div class="card-title">
      <h1>Guias Faturadas</h1>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Paciente</th>
          <th scope="col">Guia</th>
          <th scope="col">Atend</th>
          <th scope="col">Valor</th>
        </tr>
      </thead>

      <% @guias.each do |g| %>
        <tbody>
          <tr>
            <th scope="row"><%= g.id %></th>
            <td><%= g.paciente.nome %></td>
            <td><%= g.numero %></td>
            <td><%= (g.solicitados) %></td>
          </tr>
        </tbody>
      <% end %>

    </table>
    Foram faturados <b><%= @guias.sum(:solicitados) %> atendimentos.</b>
  </div>
</div>

<%= link_to 'Voltar', '/relguias/index' %> 

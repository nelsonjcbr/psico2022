<%= form_with(model: convenio) do |form| %>
  <% if convenio.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(convenio.errors.count, "error") %> prohibited this convenio from being saved:</h2>

      <ul>
        <% convenio.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :nome, class: "form-label" %>
    <%= form.text_field :nome, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :valor_atendimento, class: "form-label" %>
    <%= form.number_field :valor_atendimento, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.check_box :usa_guia, class: "form-check-input" %>
    <%= form.label :usa_guia, class: "form-check-label" %>
  </div>

  <div class="form-actions">
    <%= form.submit class: "btn btn-primary" %>
